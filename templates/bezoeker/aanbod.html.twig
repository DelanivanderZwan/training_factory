{% extends 'base.html.twig' %}
{% block aanbod %}
        {% for post in posts %}
            <div class="card" style="width: 18rem; float: left; height: 390px">
                <img src="images/{{ post.naam }}.jpg" class="card-img-top" alt="..." style="height: 200px">
                <div class="card-body">
                    <h5 class="card-title">{{ post.naam }}</h5>
                    <p class="card-text">{{ post.description }} <br> {{ post.duration }} min <br> &euro;{{ post.costs }} </p>
                    <a class="btn btn-info" href="#" role="button">Edit</a>
                </div>
            </div>
        {% endfor %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-info" href="{{ path('form') }}" style="margin-left: 10px; margin-top: 5px;" role="button">Toevoegen</a>
    {% endif %}
    <button class="btn btn-lg btn-secondary" style="float: right" type="submit"><a class="nav-item nav-link" href="{{ path ('app_logout') }}">uitloggen</a></button>
{% endblock %}