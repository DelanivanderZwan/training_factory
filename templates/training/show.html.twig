{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block show %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>Duur</th>
                <td>{{ training.duration }}</td>
            </tr>
            <tr>
                <th>Kosten</th>
                <td>{{ training.costs }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('training_index') }}">Terug naar lijst</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('training_edit', {'id': training.id}) }}">Bewerken</a>
    {% endif %}

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
