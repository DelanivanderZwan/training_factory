<!DOCTYPE html>
<html>
<body>
{% block body %}
    {% block header %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path ('homepage') }}"><img src="/images/logo.png" width="65" height="65">Training
            Centrum Den
            Haag</a>
    {% endblock %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="{{ path ('homepage') }}">Home <span
                        class="sr-only">(current)</span></a>
            {% if is_granted('ROLE_ADMIN') %}
            <a class="nav-item nav-link" href="{{ path('training') }}">Lessen</a>
                <a class="nav-item nav-link" href="{{ path('leden') }}">Leden</a>
                {% else %}

                {% if is_granted('ROLE_USER') %}
                    <a class="nav-item nav-link" href="{{ path ('contact') }}">Contact</a>
                    <a class="nav-item nav-link" href="{{ path('training') }}">Lessen</a>
                    <a class="nav-item nav-link" href="{{ path('agenda') }}">Agenda</a>
                    <a class="nav-item nav-link" href="{{ path('regels') }}">Regels</a>
                    {% endif %}
            {% endif %}

        </div>
    </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="nav-item nav-link" style="float: right" href="{{ path ('app_logout') }}">uitloggen</a>
        {% else %}
            <a class="nav-item nav-link" href="{{ path ('app_login') }}">Inloggen</a>
        {% endif %}
    </nav>

{% endblock %}


